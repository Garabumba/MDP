@using MDPActual.Models;

@model IEnumerable<Item>
@{
	Layout = null;
}

<form asp-controller="Home" app-action="Index" method="post" enctype="multipart/form-data">
	<input type="file" name="file" />
	<button type="submit">Upload</button>
</form>

<a href="~/Test" class="btn btn-primary btn-lg">Register</a>

@if (Model.Count() > 0)
{
	<table>
		<tr>
			<td>Name</td>
		</tr>
		@foreach (Item i in Model)
		{
			@if (@i.Email == "Философия"){
			<tr><td>@i.Email</td></tr>}
		}
	</table>
	<form asp-controller="Test" app-action="Index" method="get" enctype="multipart/form-data">
		<label>Выберите предмет:</label>
		<select name="item" >
			@foreach(Item student in Model)
			{
				<option value=@student.Email>@student.Email</option>
			}
		</select>
		<button type="submit">Test</button>
	</form>
